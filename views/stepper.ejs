        bottom: 28px;
        height: 2.5px;
        left: 0;
        right: 0;
        margin: 0 16px;
    }

    .progress-bar {
        position: relative;
        height: 2.5px;
        background: rgba(151, 151, 151, .32);
    }

    .progress {
        position: absolute;
        height: 2.5px;
        background: #349caf;
        width: 0;
    }

    @media (max-width: 600px) {
        .stepper {
            flex-direction: column;
        }

        .step {
            width: 100%;
            margin-bottom: 1em;
        }
    }





    .step-detail {
        display: flex;
        align-items: center;
        gap: 2rem;
        margin-bottom: 2rem;

        @media (min-width:768px) {
            opacity: 0;
            visibility: hidden;
            height: 0px;
            margin-bottom: 0;
            transition: all 0.7s ease-in-out;
            transform: translateY(400px);
        }
    }

    .step-detail.active {
        display: flex;

        @media (min-width:768px) {
            opacity: 1;
            visibility: visible;
            height: fit-content;
            transform: translateY(0px);
        }
    }

    .step-details-container h4 {
        color: #349caf;
    }

    .step-detail>div:first-child {
        width: 100px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;

        @media (min-width:768px) {
            display: none;
        }
    }

    .step-detail .icon {
        color: #349caf;
    }
</style>
